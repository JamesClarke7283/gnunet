[messenger]
START_ON_DEMAND = YES
PORT = 2097
HOSTNAME = localhost
BINARY = gnunet-service-messenger
ACCEPT_FROM = 127.0.0.1;
ACCEPT_FROM6 = ::1;
UNIXPATH = $GNUNET_RUNTIME_DIR/gnunet-service-messenger.sock
UNIX_MATCH_UID = NO
UNIX_MATCH_GID = YES

# Directory to store messages and contacts
MESSENGER_DIR = $GNUNET_DATA_HOME/messenger/